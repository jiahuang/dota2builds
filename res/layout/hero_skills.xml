<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
	<LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/skillLayout"
	>
	<LinearLayout 
	    android:id="@+id/layout1"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/lgray"
	    android:layout_weight="1"
	    android:padding="3dp"
	    >
	    <ImageButton
			android:id="@+id/skill1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:tag="1"
			android:onClick="skillClick"
			android:adjustViewBounds="true"
		    android:scaleType="centerInside"
		    android:padding="0dp"
		    />
	</LinearLayout>
	
	<LinearLayout 
	    android:id="@+id/layout2"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/lgray"
	    android:layout_weight="1"
	    >
	    <ImageButton
			android:id="@+id/skill2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:tag="2"
			android:onClick="skillClick"
			android:adjustViewBounds="true"
		    android:scaleType="centerInside"
		    android:padding="0dp"
		    />
	</LinearLayout>
	
	<LinearLayout 
	    android:id="@+id/layout3"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/lgray"
	    android:layout_weight="1"
	    >
	    <ImageButton
			android:id="@+id/skill3"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:tag="3"
			android:onClick="skillClick"
			android:adjustViewBounds="true"
		    android:scaleType="centerInside"
		    android:padding="0dp"
		    />
	</LinearLayout>
	
	<LinearLayout 
	    android:id="@+id/layout4"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/lgray"
	    android:layout_weight="1"
	    >
	    <ImageButton
	        android:id="@+id/skill4"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:tag="4"
			android:onClick="skillClick"
			android:adjustViewBounds="true"
		    android:scaleType="centerInside"
		    android:padding="0dp"
		    />
	</LinearLayout>
	</LinearLayout>
	<TextView
	android:id="@+id/skillName"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="5dp"
	android:textColor="@color/lgray"
	android:textSize="20sp"
	android:textStyle="bold"
	>
	</TextView>
	<TextView
	android:id="@+id/skillDescription"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:textSize="15sp"
	android:padding="5dp"
	>
	</TextView>
</LinearLayout>
</ScrollView>
