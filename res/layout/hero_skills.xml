<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/skillLayout"
	>
	<ImageButton
	android:id="@+id/skill1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:onClick="skill1Click"
	>
	</ImageButton>
	<ImageButton
	android:id="@+id/skill2"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:onClick="skill2Click"
	>
	</ImageButton>
	<ImageButton
	android:id="@+id/skill3"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:onClick="skill3Click"
	>
	</ImageButton>
	<ImageButton
	android:id="@+id/skill4"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:onClick="skill4Click"
	>
	</ImageButton>
	</LinearLayout>
	<TextView
	android:id="@+id/skillName"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_below="@+id/skillLayout"
	>
	</TextView>
	<TextView
	android:id="@+id/skillDescription"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_below="@+id/skillName"
	>
	</TextView>
</LinearLayout>

