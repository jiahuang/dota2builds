<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dota2.builds.pro"
    android:installLocation="auto"
    android:versionCode="4"
    android:versionName="1.20" >

    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@style/CustomTheme">
        
        <activity
            android:name=".Dota2buildsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HeroActivity" android:theme="@style/CustomTheme" />
        <activity android:name=".WebViewActivity" android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name=".HeroGridActivity" android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name=".AllItemsActivity" android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name=".HeroSkillsActivity" android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name=".ItemBuildActivity" android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name=".SkillBuildActivity" android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name=".BuildDescriptionActivity" android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name=".SkillActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".SkillBuildsListActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".BuildsActivity" android:theme="@style/CustomTheme"/>
        <activity android:name=".BuildsListActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".ItemActivity" android:theme="@style/CustomTheme" />
        <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    </application>

</manifest>  
